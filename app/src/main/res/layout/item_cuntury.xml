<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

                android:layout_width="match_parent"
                android:layout_height="wrap_content">
    <TextView
        android:textColor="@android:color/black"
        android:id="@+id/item_century_tv_type"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:maxLines="2"
        android:textSize="18sp"/>
    <TextView
        android:layout_margin="20dp"
        android:id="@+id/item_century_tv_tak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_century_tv_type"
        android:text="头条"/>


    <RelativeLayout

        android:id="@+id/recommend_all_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true">
        <ImageView
            android:layout_marginTop="15dp"
            android:layout_marginRight="7dp"
            android:id="@+id/item_century_ima"
            android:layout_width="120dp"
            android:layout_height="70dp" />
        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/item_century_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_century_ima"
            android:layout_centerHorizontal="true"
            android:text="sss"/>

    </RelativeLayout>


</RelativeLayout>