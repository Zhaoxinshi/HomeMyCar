<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/item_market_fragment_tv_title"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:maxLines="2"
        android:text="dsdasdasd"
        android:textSize="20sp"/>

    <RelativeLayout

        android:id="@+id/rec_all_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true">
        <ImageView
            android:id="@+id/item_market_fragment_ima"
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:background="@mipmap/ic_launcher"/>
        <TextView
            android:id="@+id/item_market_fragment_tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_market_fragment_ima"
            android:layout_centerHorizontal="true"
            android:text="sss"/>

    </RelativeLayout>


</RelativeLayout>