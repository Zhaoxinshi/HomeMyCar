<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

    <ImageView
        android:layout_centerVertical="true"
        android:id="@+id/item_radio_sale_ima"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/ic_launcher"/>

    <RelativeLayout
       android:gravity="center"
      android:layout_marginRight="20dp"
       android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_radio_sale_ima">
        <TextView
            android:id="@+id/item_radio_sale_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="东风标志"
            android:textColor="@android:color/black"
            android:textSize="20sp"/>
        <RelativeLayout
            android:layout_below="@+id/item_radio_sale_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:maxLines="1"
                android:id="@+id/item_radio_sale_tv_preferential"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sssssssss"/>
            <LinearLayout
                android:layout_below="@+id/item_radio_sale_tv_preferential"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/item_radio_sale_tv_low_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="dasdasdasd"/>
                <TextView
                    android:id="@+id/item_radio_sale_tv_up_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="dasd"/>

            </LinearLayout>
        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>