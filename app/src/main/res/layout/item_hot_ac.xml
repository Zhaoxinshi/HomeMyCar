<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/item_hot_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_hot_ima"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/item_hot_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/item_hot_ima"
            android:text="心智谁821"
            android:textColor="@android:color/darker_gray"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/item_hot_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="09-26 17:33"
            android:textColor="@android:color/darker_gray"
            android:textSize="15sp" />


    </RelativeLayout>

    <TextView
        android:id="@+id/item_hot_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_hot_rl"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:maxLines="2"
        android:text="9月26日喜迎广7⃣️三菱产欧烂的'打败'回家"
        android:textSize="20sp" />
    <TextView
        android:textColor="@android:color/darker_gray"
        android:textSize="18sp"
        android:maxLines="2"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/item_hot_title"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="15dp"
        android:text="9月26日这一天是一个特比的日子,今天是我'大白'回家的日子.选车篇:打..."
        android:id="@+id/item_hot_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout

        android:layout_below="@+id/item_hot_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="80dp"
            android:id="@+id/item_hot_forum"
            android:text="欧蓝德论坛"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/item_hot_num"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:text="回"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>


</RelativeLayout>