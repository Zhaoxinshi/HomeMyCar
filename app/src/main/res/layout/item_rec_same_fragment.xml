<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textColor="@android:color/black"
        android:id="@+id/tv_rec_all"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:maxLines="2"
        android:text="dsdasdasd"
        android:textSize="17sp"/>

    <TextView
        android:layout_margin="20dp"
        android:layout_below="@+id/tv_rec_all"
        android:text="100评论"
        android:id="@+id/item_rec_tv_rec_sss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <RelativeLayout

        android:id="@+id/rec_all_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true">
        <ImageView
            android:layout_marginRight="7dp"
            android:layout_marginTop="15dp"
            android:id="@+id/ima_rec_all"
            android:layout_width="140dp"
            android:layout_height="70dp" />
        <TextView
            android:layout_marginTop="18dp"
            android:id="@+id/tv_rec_all_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ima_rec_all"
            android:layout_centerHorizontal="true"
            android:text="sss"/>

    </RelativeLayout>


</RelativeLayout>